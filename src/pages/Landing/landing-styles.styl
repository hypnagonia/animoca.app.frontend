:global(.displayedTime) {
  display flex;
  align-items: center;
  justify-content: center;

  :global(.countBox) {
    display flex
    flex-direction row-reverse
    align-items center
    justify-content space-between

    :global(.countBoxItem) {
      margin 0px 20px

      :global(.label) {
        font-family: Nunito;
        font-size: 20px !important;
        text-align: center;
        margin: 0 0 4px 0px;
        // font-weight: 700;
        // color: #0d1d2b;
        color: white
      }

      :global(.count) {
        font-family Nunito
        font-size 20px

        // background rgb(13, 28, 43) !important;
        border-radius 5px
        // color white !important

        padding 10px 15px
      }
    }
  }
}

.specialBlock {
  background rgba(13, 29, 43, 0.7)
  border-radius 15px
}

.mainBlock {
  background-image url("/landing/main/BeastQuest1.png")
  background-repeat no-repeat
  background-position 0px 0px
  background-size cover

  width 100%
  height 900px
  padding 0 60px
}

.pageContent {
  max-width 1280px
  width 100%
  height 100%
  margin 0 auto
  position relative
}

.heroes {
  position absolute
  height auto
  width 600px
  bottom 100px
  right 0%
}

.gold {
  position absolute
  height auto
  width 400px
  bottom -100px
  left 30%
}

.dragon {
  position absolute
  height auto
  width 300px
  top 50px
  left 100px
  opacity 0.5
  // left 40%
}

.appStore {
  max-width 140px
}

.googlePlay {
  max-width 186px
}

@media (max-width: 1100px) {
  .heroes {
    width 400px
  }

  .gold {
    width 300px
  }
}

@media (max-width: 800px) {
  .heroes {
    display none
  }
}

.howToBuy {
  background #2330D0;
  height auto
  width 100%

  .reason {
    border-radius 5px
    background white
    padding 20px
    align-items center
    justify-content flex-start
    flex-direction column
    text-align center

    position relative

    width 240px
    min-width 240px
    height 415px

    margin-bottom 20px

    .smallTitle {
      margin: 20px 0;
      min-height 34px
      display flex
      align-items center
    }

    .description {
      height 300px
    }

    .number {
      position absolute
      top 20px
      left 20px
      font-weight 500
      color #04080D
      opacity 0.2
      font-size 22px
    }

    .imageContainer {
      background antiquewhite
      border-radius 50%
      width 130px
      min-height 130px
      display flex
      align-items center
      justify-content center

      img {
        width auto
        height 110px
      }
    }

    button {
      width 150px
    }
  }
}

.needToBuy {
  height auto
  width 100%
  background #0D1C2B

  .pageContent {
    > div {
      width 50%
      padding-right 40px
      padding-left 40px
    }
  }

  @media (max-width 600px) {
    .pageContent {
      > div {
        width 100%
        margin-bottom 20px
      }

      padding 80px 20px 60px 20px

      flex-direction column
    }
  }
}

.pricing {
  width 100%
  min-height 300px
  background #000102
}


