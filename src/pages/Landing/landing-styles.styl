.mainBlock {
  background-image url("/landing/main/BeastQuest1.png")
  background-repeat no-repeat
  background-position 0px 0px
  background-size cover

  width 100%
  height 900px
  padding 0 60px
}

.pageContent {
  max-width 1280px
  width 100%
  height 100%
  margin 0 auto
  position relative
}

.heroes {
  position absolute
  height auto
  width 600px
  bottom 100px
  right 0%
}

.gold {
  position absolute
  height auto
  width 400px
  bottom -100px
  left 30%
}

.dragon {
  position absolute
  height auto
  width 300px
  top 50px
  left 120px
}

.appStore {
  max-width 140px
}

.googlePlay {
  max-width 186px
}

@media (max-width: 1100px) {
  .heroes {
    width 400px
  }

  .gold {
    width 300px
  }
}

@media (max-width: 800px) {
  .heroes {
    display none
  }
}

.howToBuy {
  background #2330D0;
  height auto
  width 100%

  .reason {
    border-radius 5px
    background white
    padding 20px
    align-items center
    justify-content flex-start
    flex-direction column
    text-align center

    position relative

    width 240px
    min-width 240px
    height 415px

    margin-bottom 20px

    .smallTitle {
      margin: 20px 0;
      min-height 34px
      display flex
      align-items center
    }

    .description {
      height 300px
    }

    .number {
      position absolute
      top 20px
      left 20px
      font-weight 500
      color #04080D
      opacity 0.2
      font-size 22px
    }

    .imageContainer {
      background antiquewhite
      border-radius 50%
      width 130px
      min-height 130px
      display flex
      align-items center
      justify-content center

      img {
        width auto
        height 110px
      }
    }

    button {
      width 150px
    }
  }
}

.needToBuy {
  height auto
  width 100%
  background #0D1C2B

  .pageContent {
    > div {
      width 50%
      padding-right 40px
      padding-left 40px
    }
  }

  @media (max-width 600px) {
    .pageContent {
      > div {
        width 100%
        margin-bottom 20px
      }

      padding 80px 20px 60px 20px

      flex-direction column
    }
  }
}

.pricing {
  width 100%
  min-height 300px
  background #000102
}


